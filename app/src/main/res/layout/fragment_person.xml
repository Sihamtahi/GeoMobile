<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc_cass"

    >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futurabook"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:id="@+id/textHistorique"
            android:text="Les personnages de ce pays"
            android:layout_marginTop="20dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="18dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="12dp"
            android:layout_below="@+id/textHistorique"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:id="@+id/RecylerPerson">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>