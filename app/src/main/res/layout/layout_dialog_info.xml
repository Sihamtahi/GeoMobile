<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent" android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@drawable/dialog_backgroun_region_info"
                android:layout_width="500dp">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Découvrir un nouveau pays"
              android:textSize="25dp"
              android:textColor="@color/bluef_maq"
              android:textStyle="bold" android:layout_marginTop="13dp"
              android:layout_alignParentTop="true" android:textAlignment="center" android:layout_alignParentStart="true"
              android:layout_marginStart="42dp"/>
    <TextView android:layout_width="335dp"
              android:layout_height="30dp"
              android:text="Vous avez jamais visité : "
              android:textSize="15dp"
              android:id="@+id/dialog_num6"
              android:textColor="@color/gray"
              android:textAlignment="center"
              android:layout_marginTop="50dp" android:layout_alignParentTop="true"
              android:layout_alignParentStart="true"
              android:layout_marginStart="32dp"
              android:layout_marginEnd="19dp" android:textStyle="bold"/>
    <TextView android:layout_width="342dp"
              android:layout_height="52dp"
              android:text="Vous voulez découvrir ce pays ? "
              android:textSize="15dp"
              android:id="@+id/dialog_num"
              android:textColor="@color/gray"
              android:textAlignment="center"
              android:layout_marginTop="124dp" android:layout_alignParentTop="true"
              android:layout_alignParentStart="true"
              android:layout_marginStart="42dp"
              android:layout_marginEnd="19dp" android:textStyle="bold"/>
    <TextView android:layout_width="171dp"
              android:layout_height="55dp"
              android:text="Algérie"
              android:textSize="25dp"
              android:textColor="@color/colorAccent"
              android:textAlignment="center"
              android:layout_marginTop="4dp"
              android:layout_alignParentStart="true"
              android:layout_marginStart="106dp"
              android:layout_marginEnd="21dp" android:textStyle="bold" android:layout_below="@+id/dialog_num6"
              android:id="@+id/nomPays"/>


    <Button
            android:text="non"
            android:textSize="15dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/cancel_dialog"
            android:background="@drawable/costum_button"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="205dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="30dp"

            android:textStyle="bold" android:textColor="@color/bluef_maq" android:textAlignment="center"/>
    <Button
            android:text="oui"
            android:textSize="15dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/oui_dialog"
            android:background="@drawable/costum_button"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="205dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="263dp"
            android:layout_marginBottom="30dp"

            android:textStyle="bold" android:textAlignment="center" android:textColor="@color/colorAccent"/>

    <LinearLayout
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="195dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" android:visibility="visible"
            android:layout_width="350dp"/>


</RelativeLayout>
